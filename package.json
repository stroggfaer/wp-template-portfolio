{
  "name": "template-portfolio",
  "version": "1.0.0",
  "description": "WordPress theme based on template-portfolio with SASS support",
  "main": "index.js",
  "scripts": {
    "sass": "sass --watch assets/sass/main.scss:assets/css/main.css",
    "build:css": "npx webpack --config webpack.config.js --mode=production",
    "watch:css": "npx webpack --config webpack.config.js --watch --mode=development"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.18",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.10.0",
    "cssnano": "^6.0.5",
    "file-loader": "^6.2.0",
    "mini-css-extract-plugin": "^2.8.1",
    "node-sass": "^9.0.0",
    "postcss-cli": "^11.0.0",
    "postcss-loader": "^8.1.1",
    "sass": "^1.47.0",
    "sass-loader": "^14.1.1",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  }
}
